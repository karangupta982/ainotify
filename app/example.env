# Groq API Configuration
GROQ_API_KEY=

# Email Configuration (Gmail SMTP)
MY_EMAIL=
APP_PASSWORD=

# Webshare Proxy
WEBSHARE_USERNAME=
WEBSHARE_PASSWORD=

# Environment Configuration
# Set to LOCAL for local development, PRODUCTION for production (Render)
# If not set, defaults to LOCAL
ENVIRONMENT=LOCAL

# Database Configuration
# For Render: DATABASE_URL is automatically provided, no need to set individual vars
# For Local Development: Use individual POSTGRES_* variables below
DATABASE_URL=

# Local Development Database (only needed if DATABASE_URL is not set)
POSTGRES_USER=
POSTGRES_PASSWORD=
POSTGRES_DB=
POSTGRES_HOST=
POSTGRES_PORT=

# MongoDB (User auth + profile + channels)
MONGODB_URL=
MONGODB_DB=

# Auth / JWT
JWT_SECRET=
JWT_EXPIRES_IN_DAYS=
SESSION_COOKIE_NAME=

# Frontend URL (for CORS / redirects)
FRONTEND_URL=http://localhost:3000

# Razorpay (billing)
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_CURRENCY=INR
RAZORPAY_AMOUNT_STARTER=
RAZORPAY_AMOUNT_PRO=
